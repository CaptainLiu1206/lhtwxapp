.item {
  height: 220rpx;
  display: flex;
  margin-bottom: 30rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  background-color: #fafafa;
  border-radius: 10rpx;
  overflow: hidden;
}
.item-left {
  flex: 220rpx 0 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 20rpx;
}
.item-left .thumb {
  width: 220rpx;
}
.item-right {
  flex: 1 0 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.item-right .title {
  width: 100%;
  height: 40rpx;
  font-weight: bold;
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333;
}
.price-sign {
  font-size: 0;
  width: 100%;
  text-align: right;
}
.price {
  color: red;
  font-size: 28rpx;
  line-height:30px;
  float: left;
}
.time,
.address {
  width: 100%;
  font-size: 24rpx;
  line-height: 24rpx;
  height: 24rpx;
  color: #999;
}
